<%- include("top.ejs") %>
    <p>Welcome to
        <%= title %>
    </p>
    <p>
        <%= customers.length %> clientes cadastrados!
    </p>
    <table>
        <thead>
            <tr>
                <td>Nome</td>
                <td>Idade</td>
                <td>Região</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
            <% customers.forEach(item=> {
        %>
                <tr>
                    <td>
                        <a href="/customers/edit/<%=item._id %>" title="Editar">
                            <%= item.nome %>
                        </a>
                    </td>
                    <td>
                        <%= item.idade %>
                    </td>
                    <td>
                        <%= item.cidade %>
                            <%= item.uf %>
                    </td>

                    <td>
                        <a href="/customers/edit/<%=item._id %>" title="Editar">
                            <img src="/images/edit.png">
                        </a>
                        <a href="/customers/delete/<%=item._id %>" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir esse cliente?')">
                            <img src="/images/delete.png">
                        </a>
                    </td>
                </tr>
                <% 
      }) 
        %>
        </tbody>
    </table>
    <hr />
    <a href="/customers/new">Cadastrar Novo</a>

    <%- include("bottom.ejs") %>